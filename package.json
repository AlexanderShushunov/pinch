{
    "name": "pinchable",
    "version": "0.0.1",
    "type": "module",
    "license": "MIT",
    "files": [
        "lib/**/*",
        "README.md",
        "LICENSE"
    ],
    "main": "./lib/pinchable.umd.cjs",
    "module": "./lib/pinchable.js",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/pinchable.js",
            "require": "./lib/pinchable.umd.cjs",
            "default": "./lib/pinchable.js"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build-lib": "vite build --config vite.config.lib.ts && rm -f lib/*.css && tsc -p tsconfig.lib-types.json",
        "preview": "vite preview",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,html,md}": "prettier --write"
    },
    "devDependencies": {
        "@eslint/css": "^0.10.0",
        "@eslint/js": "^9.33.0",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/user-event": "^14.6.1",
        "eslint": "^9.33.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.1.0",
        "vitest": "^3.2.4"
    }
}
